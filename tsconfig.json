{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "build/",
    "esModuleInterop": "commonjs",
    "resolveJsonModule": true,
    "lib": ["es6"],
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "allowJs":true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
